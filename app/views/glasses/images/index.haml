.container
  .glasses-images-index
    %h1.text-center= "Google images for #{@glass.name}"

    .row
      = form_tag glass_image_path(@glass.id, 1), method: :put do
        = file_field_tag 'image'
        = submit_tag 'Upload', class: 'btn btn-primary'

      - @images.each do |image|
        .col-md-4
          = form_tag glass_image_path(@glass.id, 1), method: :put do
            = hidden_field_tag 'image_url', image
            = image_submit_tag image, class: 'adaptive-image'