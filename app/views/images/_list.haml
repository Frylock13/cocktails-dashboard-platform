.container
  .objects-images-index
    %h1.text-center= "Images for #{@object.name}"
    
    .image-center
      = image_tag @object.image.url

    .row    
      = form_tag image_path(@object.id, 1, type: @object.class), method: :put do
        = file_field_tag 'image'
        = submit_tag 'Upload', class: 'btn btn-primary'
    
    - @images.each do |image|
      .col-md-4
        = form_tag image_path(@object.id, 1, type: @object.class), method: :put do
          = hidden_field_tag 'image_url', image
          = image_submit_tag image, class: 'medium-img'